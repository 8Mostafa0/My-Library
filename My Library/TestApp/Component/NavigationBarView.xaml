<UserControl x:Class="TestApp.Component.NavigationBarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestApp.Component"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border >

        <Grid Background="#BBCB2E">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button Grid.Row="0" Margin="15" Content="خانه" FontSize="20" Background="#6B7445" Command="{Binding NavigateHomeCommand}"/>
            <Button Grid.Row="1" Margin="15" Content="کتاب ها" FontSize="20" Background="#6B7445" Command="{Binding NavigateBooksCommand}" />
            <Button Grid.Row="2" Margin="15" Content="کاربران" FontSize="20" Background="#6B7445" Command="{Binding ClientsCreenCommand}"/>
            <Button Grid.Row="3" Margin="15" Content="امانت ها" FontSize="20" Background="#6B7445" Command="{Binding NavigateLoansCommand}" />
            <Button Grid.Row="4" Margin="15" Content="رزرو ها" FontSize="20" Background="#6B7445"  Command="{Binding NavigateReservedBooksCommand}"/>
            <Button Grid.Row="5" Margin="15" Content="تنظیمات" FontSize="20" Background="#6B7445"  Command="{Binding NavigateToSettingsCommand}"/>
            <Button Grid.Row="6" Margin="15" Content="خروج" FontSize="20" Background="#6B7445"  Command="{Binding CloseAppCommand}"/>
        </Grid>
    </Border>    
</UserControl>
