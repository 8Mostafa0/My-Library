<UserControl x:Class="My_Library.Component.LayoutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:My_Library.Component"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="16*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ContentControl Grid.Row="0" Grid.RowSpan="2" Grid.Column="1"  Content="{Binding MainContentViewModel}"/>
        <ContentControl Grid.Row="1" Grid.Column="0"  Content="{Binding StatusBarViewModel}"/>
        <ContentControl  Grid.Row="0" Grid.Column="0"  Content="{Binding contentViewModel}"/>

    </Grid>
</UserControl>
