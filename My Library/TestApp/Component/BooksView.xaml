<UserControl x:Class="My_Library.Component.BooksView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:My_Library.Component"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#6CA651">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0" Grid.Column="8" Grid.ColumnSpan="3" Grid.RowSpan="8" Background="#839705" CornerRadius="15 0 0 15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBox Grid.Row="1" Margin="10" Grid.Column="0" VerticalAlignment="Center"   Text="{Binding Name}"/>
                <TextBlock Text="نام کتاب" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center"/>

                <TextBox Grid.Row="2" Margin="10" Grid.Column="0" VerticalAlignment="Center"  Text="{Binding Publisher}"/>
                <TextBlock Text="منتشر کننده" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center"/>

                <ComboBox Grid.Row="3" Margin="10" Grid.Column="0" SelectedIndex="0" VerticalAlignment="Center"  Text="{Binding Subject}">
                    <ComboBoxItem Content="رمان" Tag="رمان"/>
                    <ComboBoxItem Content="قصه" Tag="قصه"/>
                    <ComboBoxItem Content="آموزشی" Tag="آموزشی"/>
                    <ComboBoxItem Content="معمایی" Tag="معمایی"/>
                    <ComboBoxItem Content="خودشناسی" Tag="خودشناسی"/>
                    <ComboBoxItem Content="شکرگذاری" Tag="شکرگذاری"/>
                </ComboBox>
                    <TextBlock Text="نوع کتاب" Grid.Row="3"  Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center"/>

                    <TextBox Grid.Row="4" Margin="10" Grid.Column="0" VerticalAlignment="Center"  Text="{Binding PublicationDate}"/>
                <TextBlock Text="سال انتشار" Grid.Row="4" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center"/>

                <ComboBox Grid.Row="5" Margin="10" Grid.Column="0" VerticalAlignment="Center"  SelectedIndex="{Binding Tier}">
                    <ComboBoxItem Content="کاربران معمولی"/>
                    <ComboBoxItem Content="کاربران ویژه"/>
                </ComboBox>
                <TextBlock Text="درجه" Grid.Row="5" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center"/>

                <Grid Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <Button Margin="5" FlowDirection="RightToLeft"  VerticalAlignment="Center"  Grid.Column="0" Content="مرتب" Command="{Binding OrderBooksCommand}"/>

                    <ComboBox Margin="5" Grid.Column="1"  VerticalAlignment="Center" FlowDirection="RightToLeft" SelectedIndex="{Binding SortIndex}">
                        <ComboBoxItem Content="همه کتاب ها" />
                        <ComboBoxItem Content="امانت برده ها"  />
                        <ComboBoxItem Content="دیرکرد ها" />
                    </ComboBox>

                    <TextBlock Text="دسته بندی" Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Grid>



                <Button Grid.Row="8" Grid.Column="0" Content="ذخیره" Margin="5" VerticalAlignment="Center"  Command="{Binding AddNewBookCommand}"/>
                <Button Grid.Row="8" Grid.Column="1" Content="ویرایش" Margin="5" VerticalAlignment="Center" Command="{Binding EditBookCommand}"/>
                <Button Grid.Row="9" Grid.Column="0" Content="حذف" Margin="5" VerticalAlignment="Center"  Command="{Binding DeleteBookCommand}"/>
                <Button Grid.Row="9" Grid.Column="1" Content="ریست" Margin="5" VerticalAlignment="Center"  Command="{Binding ReloadBooksCommand}"/>
            </Grid>
        </Border>

        <ListView Grid.Row="0" Grid.Column="0" Grid.RowSpan="8" Grid.ColumnSpan="8" Margin="5" FlowDirection="RightToLeft" ItemsSource="{Binding Books}" SelectedItem="{Binding SelectedBook}">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem" >
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.View  >
                <GridView>
                    <GridViewColumn Header="آیدی" Width="60">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock  HorizontalAlignment="Center" Text="{Binding ID}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="نام کتاب" Width="60">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock  HorizontalAlignment="Center" Text="{Binding Name}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="منتشر کننده" Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock HorizontalAlignment="Center" Text="{Binding Publisher}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="نوع کتاب" Width="60">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock HorizontalAlignment="Center" Text="{Binding Subject}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="سال انتشار" Width="70">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock HorizontalAlignment="Center" Text="{Binding PublicationDate}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="درجه" Width="60">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock HorizontalAlignment="Center" Text="{Binding Tier}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="تاریخ ثبت" Width="60">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock HorizontalAlignment="Center" Text="{Binding CreatedAt}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="اخرین ویرایش" Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock HorizontalAlignment="Center" Text="{Binding UpdatedAt}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
