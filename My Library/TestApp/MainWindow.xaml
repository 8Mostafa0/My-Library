<Window x:Class="My_Library.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:My_Library"
        xmlns:components="clr-namespace:My_Library.Component"
        xmlns:cl="clr-namespace:My_Library.Component.LoanComponents"
        xmlns:sv="clr-namespace:My_Library.Component.SettingsViews"
        xmlns:rv="clr-namespace:My_Library.Component.ReserveBookViews"
        xmlns:vm="clr-namespace:My_Library.ViewModel"
        xmlns:rvm="clr-namespace:My_Library.ViewModel.ReserveBooksViewModels"
        xmlns:lvm="clr-namespace:My_Library.ViewModel.LoanViewModels"
        xmlns:svm="clr-namespace:My_Library.ViewModel.SettingsViewModel"
        xmlns:modals="clr-namespace:ModalControl;assembly=ModalControl"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000">
    <Grid >
        <Grid.Resources>
            <DataTemplate DataType="{x:Type vm:LayoutViewModel}">
                <components:LayoutView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:NavigationBarViewModel}">
                <components:NavigationBarView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:StatusBarViewModel}">
                <components:StatusBarView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:HomeViewModel}">
                <components:HomeView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:ClientsViewModel}">
                <components:ClientsView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:BooksViewModel}">
                <components:BooksView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type lvm:LoansViewModel}">
                <cl:LoansView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type lvm:AddEditeLoanViewModel}">
                <cl:AddEditeLoanView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type svm:SettingsViewModel}">
                <sv:SettingsView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type svm:MainLayoutSettingViewModel}">
                <sv:HomeLayoutSettingsView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type svm:LoanSettingsViewModel}">
                <sv:LoansSettingsView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type svm:SecuritySettingsViewModel}">
                <sv:SecureitySettingsView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:LoginViewModel}">
                <components:LoginView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type rvm:ReservedBooksViewModel}">
                <rv:ReservedBooksView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type rvm:AddEditeReserveBookViewModel}">
                <rv:AddEditeReserveBookView/>
            </DataTemplate>
        </Grid.Resources>

        <modals:Modal Grid.Row="0" Grid.Column="0" Grid.RowSpan="8" Grid.ColumnSpan="11" Panel.ZIndex="100" IsOpen="{Binding IsModalOpen}">
            <ContentControl Content="{Binding CurrentModalView}"/>
        </modals:Modal>
        <ContentControl Content="{Binding CurrentViewModel}"/>
    </Grid>
</Window>
